<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dail_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:background="@color/black"
        android:src="@drawable/header"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/edt_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:maxLength="80"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:gravity="center_vertical|right"
            android:background="@drawable/edt_num_bg"/>

        <!--<wzp.project.dial.DigitsEditText
            android:id="@+id/edt_num"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textAppearance="@style/DialtactsDigitsTextAppearance"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:gravity="center_vertical|right"
            android:background="@android:color/transparent" />-->

        <Button
            android:id="@+id/btn_dialDel"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_delete_bg"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_num1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num1_bg" />

            <Button
                android:id="@+id/btn_num2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num2_bg"/>

            <Button
                android:id="@+id/btn_num3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num3_bg"/>
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_num4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num4_bg"/>

            <Button
                android:id="@+id/btn_num5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num5_bg"/>

            <Button
                android:id="@+id/btn_num6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num6_bg"/>
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_num7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num7_bg"/>

            <Button
                android:id="@+id/btn_num8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num8_bg"/>

            <Button
                android:id="@+id/btn_num9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num9_bg"/>
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_numStar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num_star_bg"/>

            <Button
                android:id="@+id/btn_num0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num0_bg"/>

            <Button
                android:id="@+id/btn_numSharp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num_sharp_bg"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_btFlag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/footer_left"/>

        <Button
            android:id="@+id/btn_dial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/btn_dial_bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/footer_right"/>
    </LinearLayout>

</LinearLayout>
